<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/text_margin"
    android:background="@color/md_white_1000"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/sell_book_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"
        android:background="@android:drawable/ic_menu_report_image" />

    <TextView
        android:id="@+id/sell_book_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        android:layout_gravity="center"
        android:text="dummy-title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sell_book_your_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="₹ "
            android:textColor="@color/colorPrimaryText" />

        <TextView
            android:id="@+id/sell_book_mrp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="right"
            android:text="₹ "
            android:textColor="@color/md_pink_900" />
    </LinearLayout>

</LinearLayout>
