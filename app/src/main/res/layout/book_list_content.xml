<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:background="@color/md_grey_50"
    android:elevation="1dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/bookImage"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/book_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin_small"
            android:ellipsize="end"
            android:lines="1"
            android:text="The fundamentals of physics"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/book_list_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin_small"
            android:ellipsize="end"
            android:lines="1"
            android:text="White house of India that was a large in terms of many other things like"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/booklist_yprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_margin_small"
                android:text="₹ 100"
                android:textColor="@color/colorPrimaryText" />

            <TextView
                android:id="@+id/book_list_mrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_margin_small"
                android:text="₹ 1000"
                android:textColor="@color/md_pink_900" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>